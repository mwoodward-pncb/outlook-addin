<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- Bump the version to break Outlook/OWA cache -->
  <Id>87654321-4321-4321-4321-210987654321</Id>
  <Version>2.0.0.1</Version>
  <ProviderName>PNCB</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="ACGI Upload Test"/>
  <Description DefaultValue="Test version of ACGI email upload"/>

  <IconUrl DefaultValue="https://mwoodward-pncb.github.io/outlook-addin/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://mwoodward-pncb.github.io/outlook-addin/icon-128.png"/>
  <SupportUrl DefaultValue="https://mwoodward-pncb.github.io/outlook-addin/"/>

  <AppDomains>
    <AppDomain>mwoodward-pncb.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <!-- Optional read form: keep it, but add a cache-busting query string -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://mwoodward-pncb.github.io/outlook-addin/taskpane.html?v=2001"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>

          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <!-- Map to existing assets -->
                    <bt:Image size="16" resid="Icon.32x32"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.128x128"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <!-- Give the taskpane a stable ID and enable pinning -->
                    <TaskpaneId>TaskPane.Read</TaskpaneId>
                    <SupportsPinning>true</SupportsPinning>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.32x32" DefaultValue="https://mwoodward-pncb.github.io/outlook-addin/icon-32.png"/>
        <bt:Image id="Icon.128x128" DefaultValue="https://mwoodward-pncb.github.io/outlook-addin/icon-128.png"/>
      </bt:Images>
      <bt:Urls>
        <!-- Cache-busting query strings on both endpoints -->
        <bt:Url id="Commands.Url" DefaultValue="https://mwoodward-pncb.github.io/outlook-addin/commands.html?v=2001"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://mwoodward-pncb.github.io/outlook-addin/taskpane.html?v=2001"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="ACGI Test"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Test ACGI"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Test ACGI email upload"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
